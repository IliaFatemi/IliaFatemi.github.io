---
import "../styles/global.css";
import ParallaxBg from "../components/ParallaxBg.tsx";
const { title = "Ilia Fatemi — Portfolio" } = Astro.props;
---

<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="font-[Inter] selection:bg-white/20">
    <!-- soft gradient backdrop -->
    <div aria-hidden class="fixed inset-0 -z-10">
      <div
        class="absolute inset-0 bg-[radial-gradient(80rem_60rem_at_50%_-10%,rgba(59,130,246,.15),transparent)]"
      >
      </div>
    </div>
    <ParallaxBg client:load />
    <main class="max-w-6xl mx-auto px-5">
      <slot />
    </main>
    <script is:inline>
      addEventListener("click", (e) => {
        const t = e.target;
        if (!(t instanceof Element)) return;
        const a = t.closest("a");
        if (!a || a.target === "_blank" || a.origin !== location.origin) return;

        const vt = document.startViewTransition?.bind(document);
        if (!vt) return;

        e.preventDefault();
        vt(() => {
          location.href = a.href;
        });
      });
    </script>

    <footer class="py-10 text-center text-white/60">
      <div class="flex items-center justify-center gap-6 flex-wrap">
        <!-- GitHub -->
        <a
          href="https://github.com/IliaFatemi"
          target="_blank"
          rel="noopener noreferrer me"
          class="inline-flex items-center gap-2 hover:text-white hover:translate-y-[-2px] transition"
          aria-label="GitHub"
          title="GitHub"
        >
          <svg
            width="22"
            height="22"
            viewBox="0 0 24 24"
            fill="currentColor"
            aria-hidden="true"
          >
            <path
              d="M12 .5a11.5 11.5 0 0 0-3.64 22.42c.58.11.79-.25.79-.56v-2.03c-3.2.69-3.87-1.37-3.87-1.37-.53-1.34-1.3-1.7-1.3-1.7-1.06-.72.08-.7.08-.7 1.18.08 1.8 1.2 1.8 1.2 1.04 1.79 2.74 1.27 3.4.97.11-.76.41-1.27.74-1.56-2.56-.29-5.26-1.28-5.26-5.68 0-1.25.45-2.27 1.2-3.07-.12-.29-.52-1.46.11-3.05 0 0 .98-.31 3.2 1.17a11.1 11.1 0 0 1 5.82 0c2.22-1.48 3.2-1.17 3.2-1.17.63 1.59.23 2.76.11 3.05.75.8 1.2 1.82 1.2 3.07 0 4.41-2.7 5.38-5.27 5.67.42.37.79 1.1.79 2.23v3.3c0 .31.21.68.8.56A11.5 11.5 0 0 0 12 .5Z"
            ></path>
          </svg>
          <span class="text-sm">github.com/IliaFatemi</span>
        </a>

        <!-- LinkedIn -->
        <a
          href="https://www.linkedin.com/in/ilia-fatemi"
          target="_blank"
          rel="noopener noreferrer me"
          class="inline-flex items-center gap-2 hover:text-white hover:translate-y-[-2px] transition"
          aria-label="LinkedIn"
          title="LinkedIn"
        >
          <svg
            width="22"
            height="22"
            viewBox="0 0 24 24"
            fill="currentColor"
            aria-hidden="true"
          >
            <path
              d="M4.98 3.5C4.98 4.88 3.86 6 2.5 6S0 4.88 0 3.5 1.12 1 2.5 1s2.48 1.12 2.48 2.5zM.5 8h4V23h-4V8zm7.5 0h3.8v2.05h.05C12.5 8.9 14.1 8 16.3 8c4 0 4.7 2.63 4.7 6.05V23h-4v-7.1c0-1.7-.03-3.9-2.38-3.9-2.38 0-2.74 1.86-2.74 3.77V23h-4V8z"
            ></path>
          </svg>
          <span class="text-sm">linkedin.com/in/ilia-fatemi</span>
        </a>

        <!-- Email -->
        <a
          href="mailto:YOUR_EMAIL@domain.com"
          class="inline-flex items-center gap-2 hover:text-white hover:translate-y-[-2px] transition"
          aria-label="Email"
          title="Email"
        >
          <svg
            width="22"
            height="22"
            viewBox="0 0 24 24"
            fill="currentColor"
            aria-hidden="true"
          >
            <path
              d="M20 4H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2Zm0 3.2-8 5.3L4 7.2V6l8 5.3L20 6v1.2Z"
            ></path>
          </svg>
          <span class="text-sm">fatemiilia@outlook.com</span>
        </a>
      </div>

      <div class="mt-3">© {new Date().getFullYear()} Ilia Fatemi</div>
    </footer>
  </body>
</html>
