---
import Base from "../../layouts/Base.astro";
import { projects } from "../../data/projects";
const { slug } = Astro.params;
const project = projects.find((p) => p.slug === slug);
if (!project) return Astro.redirect("/");

const title = `${project.title} — Case Study`;
---

<Base {title}>
  <article class="prose prose-invert max-w-3xl mx-auto py-12">
    <a href="/" class="text-white/70 hover:text-white">← Back</a>
    <h1 class="mt-4 text-4xl font-extrabold">{project.title}</h1>
    <p class="mt-2 text-white/70">{project.desc}</p>

    <img src={project.img} alt={project.title} class="mt-6 w-full rounded-xl" />

    <h2 class="mt-10 text-2xl font-bold">Overview</h2>
    <p>
      Write a short narrative: problem → approach → results. Add screenshots or
      GIFs.
    </p>

    <h2 class="mt-8 text-2xl font-bold">Tech Stack</h2>
    <ul class="flex flex-wrap gap-2">
      {
        project.tags.map((t) => (
          <li class="bg-white/10 rounded-full px-3 py-1 text-sm">{t}</li>
        ))
      }
    </ul>

    <a
      href={project.link}
      class="inline-block mt-10 px-5 py-3 bg-white text-black rounded-lg"
      >View on GitHub</a
    >
  </article>
</Base>
